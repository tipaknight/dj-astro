<style lang="scss">
  .container-footer {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 20px;
    max-width: 490px;
    margin: auto;
    padding: 40px 20px;
    &__logo {
      padding-bottom: 30px;
    }
    &__t1 {
      align-self: start;
    }
    &__t2 {
      align-self: end;
    }
    &__t3 {
      text-align: center;
      font-size: 13px;
      font-weight: 300;
      padding-top: 30px;
    }
    &__icon {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
